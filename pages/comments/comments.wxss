/* pages/comments/comments.wxss */
.comments {
  padding: 30rpx 25rpx 0rpx 25rpx;
}

.rateHeader {
  color: #000;
  font-weight: bold;
  font-size: 32rpx;
}

.rateComb {
  display: flex;
  justify-content: center;
  flex-wrap: nowrap;
  padding: 20rpx 30rpx 30rpx 30rpx;
}

.rateComb .rateNumber {
  display: flex;
  justify-content: center;
  align-content: center;
  flex-wrap: wrap;
  margin-right: 10%;
  width: 20%;
}

.rateNumber .rateText {
  font-size: 66rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.rateFooter {
  margin-bottom: 30rpx;
}

.lastText {
  text-align: right;
  font-size: 22rpx;
  color: #c0c0c0;
}

.boxLine {
  background: #f4f4f4;
  width: 100%;
  height: 2rpx;
}

/* 短评 */
.subjectComments {
  border-radius: 10rpx;
  background-color: #ffff;
}

.boxHeader {
  display: flex;
  justify-content: space-between;
}

.title {
  color: #191919;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 34rpx;
}

.photosNum {
  color: #818181;
  font-size: 26rpx;
  font-weight: 20;
  line-height: 80rpx;
}

.boxContainer {
  margin-top: 20rpx;
}

.boxAuthor {
  display: flex;
  justify-content: start;
}

.userAvatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.userComments {
  display: flex;
  flex-direction: column;
  justify-content: start;
  margin-left: 10rpx;
}

.userName {
  color: #191919;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 2px;
}

.userRating {
  display: flex;
  justify-content: start;
}

.createdAt {
  color: #818181;
  font-size: 20rpx;
  margin-left: 6px;
}

.boxBody {
  padding-top: 20rpx;
}

.boxBody .content {
  color: #191919;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}

.boxBody .on {
  display: block;
  overflow: visible;
}

.usefulBox {
  display: flex;
  justify-content: start;
  padding: 20rpx 0rpx;
}

.usefulImage {
  width: 32rpx;
  height: 32rpx;
}

.usefulCount {
  color: #818181;
  font-size: 26rpx;
  font-weight: 24;
  margin-left: 8rpx;
}

.boxLine {
  background: #f4f4f4;
  width: 100%;
  height: 2rpx;
}
