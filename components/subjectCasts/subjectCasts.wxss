/* components/subjectCasts/subjectCasts.wxss */
.subjectBar {
  width: 170rpx;
  height: 340rpx;
}

.subjectImageGroup {
  width: 100%;
  height: 240rpx;
}

.subjectImageGroup .subjectImage {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.subjectTitle {
  margin: 8rpx 0rpx 4rpx 0rpx;
  color: #191919;
  font-size: 26rpx;
  white-space: nowrap; 
  text-align: left;
  text-overflow: ellipsis;
  overflow: hidden;
}

.subjectPosition {
  font-size: 20rpx;
  color: #818181;
}