<!--components/starBar1/starBar1.wxml-->
<view wx:if="{{isStar}}" class="starBar1">
  <image wx:for="{{starLight}}" wx:key="{{index}}" src="/images/icon_金星.png"></image>
  <image wx:for="{{starHalf}}" wx:key="{{index}}" src="/images/icon_半星.png"></image>
  <image wx:for="{{starGrey}}" wx:key="{{index}}" src="/images/icon_灰星.png"></image>
</view>

<text wx:else class="starText" style="font-size: {{fontSize}}rpx;">{{rateText}}</text>
